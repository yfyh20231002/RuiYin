<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.tianjin.huanrong.widget.fragment.live.StudioFragment">

    <com.androidkun.xtablayout.XTabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3f414c"
        app:xTabIndicatorColor="#4f98f6"
        app:xTabIndicatorHeight="4dp"
        app:xTabIndicatorWidth="46dp"
        app:xTabMode="fixed"
        app:xTabSelectedTextColor="@color/white"
        app:xTabTextColor="@color/white"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
