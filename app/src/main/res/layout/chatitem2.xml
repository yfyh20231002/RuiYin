            <!--<TextView
                android:id="@+id/time2"
                android:textSize="11sp"
                android:textColor="#9d9999"
                android:layout_toRightOf="@id/name2"
                android:layout_alignTop="@id/name2"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>-->
            <com.unitesoft.huanrong.widget.view.AlignTextView
                android:id="@+id/other_content2"
                android:textSize="14sp"
                android:textColor="#777777"
                android:layout_alignLeft="@id/other_name2"
                android:layout_below="@id/other_name2"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>