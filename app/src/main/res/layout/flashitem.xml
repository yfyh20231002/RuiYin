<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="19dp"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:layout_marginLeft="15dp"
        android:text="10:00"
        android:textColor="@color/flashtimecolor"
        android:textSize="11sp"/>

    <ImageView
        android:id="@+id/point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/time"
        android:src="@mipmap/home_dot"/>

    <View
        android:id="@+id/line2"
        android:layout_width="1dp"
        android:layout_height="130dp"
        android:layout_alignLeft="@id/point"
        android:layout_below="@id/point"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:background="@color/line"/>

    <TextView
        android:id="@+id/item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/point"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#585858"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignLeft="@id/item_content"
        android:layout_below="@id/item_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="11dp"
        android:scaleType="centerCrop"/>
</RelativeLayout>