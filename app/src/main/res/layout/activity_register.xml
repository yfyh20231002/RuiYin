<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/register_linearlayout"
              android:background="@mipmap/login_bg"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/reset_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:background="@color/actionBarColor">

        <ImageView
            android:id="@+id/zhuce_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@mipmap/login_back"/>
        <TextView
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:text="重置密码"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <ImageButton
        android:id="@+id/btn_zhuce_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="39dp"
        android:background="@mipmap/login_del"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="99dp"
        android:background="@null"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="31dp"
            android:src="@mipmap/login_phone"/>

        <EditText
            android:id="@+id/zhuce_edit_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="17dp"
            android:background="@color/white"
            android:hint="请输入手机号"
            android:inputType="number"
            android:textColor="#202121"
            android:textColorHint="#a1a0a0"
            android:textSize="15sp"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="62dp"
        android:layout_marginRight="31dp"
        android:background="#dbdbdd"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="22dp"
        android:background="@null"
        >

        <ImageView
            android:id="@+id/imag_zhuce_yanzheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="31dp"
            android:src="@mipmap/login_yzm"/>

        <EditText
            android:id="@+id/zhuce_edit_yanzheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/imag_zhuce_yanzheng"
            android:background="@color/white"
            android:hint="请输入短信验证码"
            android:inputType="number"
            android:textColor="#202121"
            android:textColorHint="#a1a0a0"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/btn_zhuce_yzm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="31dp"
            android:background="@null"
            android:text="获取验证码"
            android:textColor="#4f98f6"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="62dp"
        android:layout_marginRight="31dp"
        android:background="#dbdbdd"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="22dp"
        android:background="@null"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="31dp"
            android:src="@mipmap/login_password"/>

        <EditText
            android:id="@+id/zhuce_edit_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:background="@color/white"
            android:hint="请设置密码为6-16位数字、字母"
            android:textColor="#202121"
            android:textColorHint="#a1a0a0"
            android:textSize="15sp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="62dp"
        android:layout_marginRight="31dp"
        android:background="#dbdbdd"/>

    <Button
        android:id="@+id/btn_zhuce_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/button_shape"
        android:text="登录"
        android:textColor="#c5d9fb"
        android:textSize="16sp"/>

</LinearLayout>
