<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/login_bg"
              android:orientation="vertical">

    <ImageButton
        android:id="@+id/btn_login_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="39dp"
        android:background="@mipmap/login_del"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="140dp"
        android:background="@null"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="31dp"
            android:src="@mipmap/login_phone"/>

        <EditText
            android:id="@+id/login_edit_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="17dp"
            android:background="@color/white"
            android:hint="请输入手机号"
            android:textColor="#202121"
            android:textColorHint="#a1a0a0"
            android:textSize="15sp"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="62dp"
        android:layout_marginRight="31dp"
        android:background="#dbdbdd"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginTop="22dp"
        android:background="@null"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/login_password"/>

        <EditText
            android:id="@+id/login_edit_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/password"
            android:background="@color/white"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColor="#202121"
            android:textColorHint="#a1a0a0"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/image_eye"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/login_invisible"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="62dp"
        android:layout_marginRight="31dp"
        android:background="#dbdbdd"/>

    <TextView
        android:id="@+id/login_text_tishi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="19dp"
        android:text="该手机号还未注册"
        android:textColor="#fe5433"
        android:textSize="14sp"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/btn_login_denglu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_shape"
        android:text="登录"
        android:textColor="#c5d9fb"
        android:textSize="16sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_login_rem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31dp"
            android:background="@null"
            android:text="忘记密码"
            android:textColor="#434343"
            android:textSize="13sp"/>

        <Button
            android:id="@+id/btn_login_zhuce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="31dp"
            android:layout_marginRight="31dp"
            android:background="@null"
            android:text="立即注册"
            android:textColor="#4f98f6"
            android:textSize="13sp"
            />

    </RelativeLayout>
</LinearLayout>
