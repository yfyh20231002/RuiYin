<?xml version="1.0" encoding="utf-8"?>
<com.example.shichang393.ruiyin.markcenter.ziye.SwipeListLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_top"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="#66ff0000"
                android:gravity="center"
                android:text="加入自选" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="#330000ff"
                android:gravity="center"
                android:text="删除自选"
                android:visibility="gone"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/hq_layout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/list_item_pinzhong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="品种"
                android:layout_centerVertical="true"
                android:textColor="#1b1b1b"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/list_item_newprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/list_item_pinzhong"
                android:layout_alignBottom="@+id/list_item_pinzhong"
                android:layout_centerHorizontal="true"
                android:text="haha"
                android:textColor="#1b1b1b"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/list_item_zhangdie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/list_item_newprice"
                android:layout_alignBottom="@+id/list_item_newprice"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:text="zeze"
                android:textColor="#1b1b1b"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>
</com.example.shichang393.ruiyin.markcenter.ziye.SwipeListLayout>