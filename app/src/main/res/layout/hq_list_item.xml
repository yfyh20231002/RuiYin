<?xml version="1.0" encoding="utf-8"?>
<com.unitesoft.huanrong.markcenter.ziye.SwipeListLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bcqCtv="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_top"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="#66ff0000"
            android:gravity="center"
            android:text="加入自选"/>

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="#330000ff"
            android:gravity="center"
            android:text="删除自选"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hq_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/list_item_pinzhong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="品种"
                android:textColor="#1b1b1b"
                android:textSize="15sp"/>

            <com.unitesoft.huanrong.markcenter.DataChangeTextView
                android:id="@+id/list_item_newprice"
                style="@style/marketCenter.item"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:singleLine="true"
                android:text="281.36"
                android:textColor="#1b1b1b"
                android:textSize="15sp"
                bcqCtv:constantTextColor="@color/actionBarHalfTransparent_85"
                bcqCtv:downBackgroundDrawable="@drawable/bg_marketcenter_down"
                bcqCtv:downTextColor="#008000"
                bcqCtv:duration="500"
                bcqCtv:normalBackgroundDrawable="@null"
                bcqCtv:normalTextColor="@color/white"
                bcqCtv:upBackgroundDrawable="@drawable/bg_marketcenter_up"
                bcqCtv:upTextColor="#ff0000"/>

            <TextView
                android:id="@+id/list_item_zhangdie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/list_item_newprice"
                android:layout_alignBottom="@+id/list_item_newprice"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="15dp"
                android:text="-0.84"
                android:textColor="#1b1b1b"
                android:textSize="15sp"/>
        </RelativeLayout>
    </LinearLayout>
</com.unitesoft.huanrong.markcenter.ziye.SwipeListLayout>