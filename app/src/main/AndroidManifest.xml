<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.shichang393.ruiyin">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".app.RuiYinApplication"
        android:allowBackup="true"
        android:icon="@mipmap/doujin"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".widget.activity.LaunchActivity"
            android:screenOrientation="portrait"
            android:theme="@style/LaunchTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".widget.activity.GuideActivity">
        </activity>
        <activity android:name=".widget.activity.MainActivity">
        </activity>
        <activity
            android:name=".widget.activity.home.CallDialog"
            android:theme="@style/customDialog"/>
        <activity android:name=".widget.activity.home.NewsActivity">
        </activity>
        <activity android:name=".widget.activity.home.NoticeActivity">
        </activity>
        <activity android:name=".widget.activity.home.LunBoActivity">
        </activity>
        <activity android:name=".widget.activity.home.IptMsgActivity">
        </activity>
        <activity
            android:name=".widget.activity.home.PlayCCTVActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".widget.activity.home.KaiHuActivity"
            android:theme="@style/customDialog">
        </activity>
        <activity android:name=".widget.activity.home.KaiHuWebview">
        </activity>
       <activity android:name=".widget.activity.live.ChatMenuDialog"
                 android:theme="@style/BottomDialog"></activity>
        <activity android:name=".markcenter.k_line.K_line"></activity>
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.example.shichang393.ruiyin.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/rc_file_path"/>
        </provider>

        <activity android:name=".widget.activity.home.ServiceActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>

                <data
                    android:host="com.example.shichang393.ruiyin"
                    android:pathPrefix="/conversation/"
                    android:scheme="rong"/>
            </intent-filter>
        </activity>
        <activity android:name=".widget.activity.live.StudioActivity">
        </activity>
        <activity android:name=".widget.activity.mine.LoginActivity">
        </activity>
        <activity android:name=".widget.activity.mine.RegisterActivity">
        </activity>
        <activity
            android:name=".widget.activity.mine.ForgotpwdDialog"
            android:theme="@style/customDialog">
        </activity>
        <activity android:name=".widget.activity.mine.UpNickNameActivity">
        </activity>

    </application>

</manifest>